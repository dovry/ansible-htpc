  heimdall:
    container_name: heimdall
    image: lscr.io/linuxserver/heimdall
    environment:
      - PUID={{ puid }}
      - PGID={{ pgid }}
      - TZ={{ tz }}
    volumes:
      - {{ config }}/heimdall:/config
    ports:
      - {{ heimdall_port1 }}:80
      - {{ heimdall_port2 }}:443
    restart: unless-stopped
    networks:
      {{ network_name }}:


  airsonic:
    container_name: airsonic
    image: lscr.io/linuxserver/airsonic
    restart: {{ restart }}
    environment:
      - PUID={{ puid }}
      - PGID={{ pgid }}
      - TZ={{ tz }}
      #- CONTEXT_PATH=URL_BASE #optional
    volumes:
      - {{ config }}/airsonic:/config
      - {{ music }}:/music
      - {{ config }}/airsonic/playlists:/playlists
      - {{ podcasts }}:/podcasts
      - {{ audiobooks }}:/audiobooks
    ports:
      - {{ airsonic_port }}:4040
    networks:
      {{ network_name }}:

  calibre-web:
    container_name: calibre-web
    image: lscr.io/linuxserver/calibre-web
    environment:
      - PUID={{ puid }}
      - PGID={{ pgid }}
      - TZ={{ tz }}
      - DOCKER_MODS=linuxserver/calibre-web:calibre
    volumes:
      - {{ config }}/calibre-web:/config
      - {{ books }}:/books
    ports:
      - {{ calibre_web_port }}:8083
    restart: {{ restart }}
    networks:
      {{ network_name }}:

  lazylibrarian:
    container_name: lazylibrarian
    image: lscr.io/linuxserver/lazylibrarian
    environment:
      - DOCKER_MODS=linuxserver/calibre-web:calibre
      - PUID={{ puid }}
      - PGID={{ pgid }}
      - TZ={{ tz }}
    volumes:
      - {{ config }}/lazylibrarian:/config
      - {{ downloads }}:/downloads
      - {{ books }}:/books/ebooks
      - {{ audiobooks }}:/books/audiobooks
    ports:
      - {{ lazylibrarian_port }}:5299
    restart: {{ restart }}
    networks:
      {{ network_name }}:
    depends_on:
      - "calibre"
  digikam:
    container_name: digikam
