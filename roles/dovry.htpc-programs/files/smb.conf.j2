[global]
  workgroup = KTZ
  server string = "{{ ansible_hostname }}"
  security = user
  guest ok = yes
  map to guest = Bad Password

  log file = /var/log/samba/%m.log
  max log size = 50
  printcap name = /dev/null
  load printers = no

# Samba Shares
[opt]
  comment = opt directory
  path = /opt
  browseable = yes
  read only = no
  guest ok = yes

[storage]
  comment = Storage on "{{ ansible_hostname }}"
  path = /mnt/storage
  browseable = yes
  read only = no
  guest ok = yes